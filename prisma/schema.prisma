generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Lesson {
  id            String  @id @default(auto())  @map("_id") @db.ObjectId
  title         String
  createdAt     DateTime @default(now())
  steps         LessonStep[]
  exp           Int
}

type LessonStep {
  number        Int
  question      String
  answer        String
  keywords      String[]
}

model Story {
  id            String  @id @default(auto())  @map("_id") @db.ObjectId
  title         String
  innerTitle    String
  description   String
  createdAt     DateTime @default(now())
  steps         StoryStep[]
  exp           Int
}

type StoryStep {
  author        String
  text          String
  number        Int
  questionTitle String?
  variants      Variants?
  answer        Int?
}

type Variants {
  variants      String[]
}