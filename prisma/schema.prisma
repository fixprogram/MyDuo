generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Lesson {
  id            String  @id @default(auto())  @map("_id") @db.ObjectId
  title         String
  innerTitle    String
  description   String
  createdAt     DateTime @default(now())
  steps         Step[]
  exp           Int
}

type Step {
  author        String
  text          String
  number        Int
  questionTitle String?
  variants      Variants?
  answer        Int?
}

type Variants {
  variants      String[]
}