generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  username     String   @unique
  passwordHash String
  streak       Int
  wasToday     Boolean
}

model Language {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  active     Boolean
  userId     String
  title      String
  lessons    Lesson[]
}

model Lesson {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  createdAt DateTime      @default(now())
  updatedAt String      
  steps     LessonStep[]
  exp       Int
  Language  Language?     @relation(fields: [projectId], references: [id])
  projectId String
}

type LessonStep {
  id         String
  number     Int
  stepType   String
  question   String?
  text       String?
  answer     String[]
  keywords   String[]
  definition  String?
  variants   Variant[]
}

type Variant {
  type        String?
  value       String
  isFocused   Boolean
  isConnected Boolean?
}
