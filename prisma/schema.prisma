// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Lesson {
  id          String  @id @default(uuid())  @map("_id")
  title       String
  innerTitle  String
  description String
  createdAt   DateTime @default(now())
  steps       Step[]
  exp         Int
}

type Step {
  author      String
  text        String
  number      Int
}